---
import Starfield from "./Starfield.astro";
type Props = { children: any };
---

<div class="relative py-12 lg:py-20">
  <Starfield subtle />
  <section
    class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-wrap gap-5 sm:gap-10 lg:gap-16 justify-between items-center"
  >
    <h1
      class="text-4xl font-extrabold text-neutral-50 sm:text-6xl sm:tracking-tight"
    >
      <slot name="title" />
    </h1>
    <div class="text-neutral-300"><slot /></div>
  </section>
</div>
